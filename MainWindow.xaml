<Window x:Class="HRSH_TaskAutomator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HRSH_TaskAutomator"
        mc:Ignorable="d"
        Title="HRSH TaskAutomator" Height="450" MinHeight="450" Width="800" MinWidth="800" Loaded="Window_Loaded">
    <Grid>
        <GroupBox x:Name="grpTasksBox" Header="Tasks" HorizontalAlignment="Left" Width="400">
            <WrapPanel x:Name="tasksPnl"/>
        </GroupBox>
        <Button x:Name="btnAddTask" Content="Add New Task" HorizontalAlignment="Left" Margin="405,10,0,0" VerticalAlignment="Top" Height="30" Width="120"/>

    </Grid>
</Window>
